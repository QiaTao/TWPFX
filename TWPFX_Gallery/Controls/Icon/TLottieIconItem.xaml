<UserControl
    x:Class="TWPFX_Gallery.Controls.Icon.TLottieIconItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TWPFX_Gallery.Controls.Icon"
    xmlns:lottieicon="clr-namespace:TWPFX.Controls.Icon.LottieIcon;assembly=TWPFX"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance local:TLottieIconItem,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border
        x:Name="border"
        Width="96"
        Height="96"
        Padding="6"
        BorderBrush="{StaticResource TCardBorderDefault}"
        BorderThickness="1"
        CornerRadius="6"
        MouseEnter="Border_MouseEnter"
        MouseUp="Border_MouseUp">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Background" Value="{StaticResource TCardBackgroundDefault}" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{StaticResource TCardBackgroundHover}" />
                        <Setter Property="BorderBrush" Value="{StaticResource TCardBorderHover}" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <lottieicon:TLottieIcon
                x:Name="lottieIcon"
                Grid.Column="0"
                Width="36"
                Height="36"
                AnimationMode="{Binding IAnimationMode}"
                IconStyle="{Binding IStyle}"
                IconType="{Binding IType}" />
            <TextBlock
                Grid.Row="1"
                FontSize="11"
                Text="{Binding IType}"
                TextAlignment="Center" />
        </Grid>
    </Border>
</UserControl>
