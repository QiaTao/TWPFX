<UserControl
    x:Class="TWPFX_Gallery.Controls.Design.TColorPaletteCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TWPFX_Gallery.Controls.Design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance local:TColorPaletteCard,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border
        Width="360"
        Height="180"
        Background="{Binding SelectedColor}"
        CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Margin="21,21,21,12"
                FontSize="21"
                FontWeight="Bold"
                Foreground="White"
                Text="{Binding Title}" />
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <TextBlock
                    Height="21"
                    Margin="21,0,0,0"
                    FontSize="14"
                    Foreground="White"
                    Text="{Binding ColorName}" />
                <TextBlock
                    Height="21"
                    Margin="21,0,0,0"
                    FontSize="14"
                    Foreground="White"
                    Text="{Binding ColorHex}" />
            </StackPanel>
            <ItemsControl
                Grid.Row="2"
                MinHeight="61"
                VerticalAlignment="Bottom"
                ItemsSource="{Binding Colors}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="7" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Background="{Binding Brush}"
                            Cursor="Hand"
                            MouseLeftButtonDown="ColorItem_MouseLeftButtonDown"
                            ToolTipService.BetweenShowDelay="50"
                            ToolTipService.InitialShowDelay="50">
                            <ToolTipService.ToolTip>
                                <TextBlock Text="{Binding Hex}" />
                            </ToolTipService.ToolTip>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Border>
</UserControl>
