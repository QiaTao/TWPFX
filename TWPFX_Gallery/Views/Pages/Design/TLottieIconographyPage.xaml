<Page
    x:Class="TWPFX_Gallery.Views.Pages.Design.TLottieIconographyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:icon="clr-namespace:TWPFX_Gallery.Controls.Icon"
    xmlns:local="clr-namespace:TWPFX_Gallery.Views.Pages.Design"
    xmlns:lottieicon="clr-namespace:TWPFX.Controls.Icon.LottieIcon;assembly=TWPFX"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="TLottieIconography2"
    d:DataContext="{d:DesignInstance local:TLottieIconographyPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <ui:AutoSuggestBox
                x:Name="suggestBox"
                Width="310"
                PlaceholderText="Search icons by type."
                ToolTipService.InitialShowDelay="100"
                ToolTipService.ShowDuration="2000">
                <ToolTipService.ToolTip>
                    <StackPanel>
                        <Image Source="C:\Users\qiata\Desktop\1a89215c-9b1a-4366-91e6-02a60eac03b0.jpg"/>
                        <TextBlock Text="多行提示"/>
                    </StackPanel>
                </ToolTipService.ToolTip>
            </ui:AutoSuggestBox>
            <TextBlock
                Margin="24,0,0,0"
                VerticalAlignment="Center"
                FontSize="13"
                Text="Icon Style" />
            <ComboBox
                Margin="12,0,0,0"
                SelectedValue="{Binding PStyle, Mode=TwoWay}"
                SelectedValuePath="Content">
                <ComboBoxItem Content="Regular" />
                <ComboBoxItem Content="Solid" />
            </ComboBox>
            <TextBlock
                Margin="24,0,0,0"
                VerticalAlignment="Center"
                FontSize="13"
                Text="Animation Mode" />
            <ComboBox
                Margin="12,0,0,0"
                SelectedValue="{Binding PAnimationMode, Mode=TwoWay}"
                SelectedValuePath="Content">
                <ComboBoxItem Content="OnHover" />
                <ComboBoxItem Content="Always" />
                <ComboBoxItem Content="Never" />
            </ComboBox>
        </StackPanel>
        <Border
            Grid.Row="1"
            Height="610"
            Margin="0,6,0,0"
            Padding="10"
            Background="{StaticResource TAreaBackgroundDefault}"
            BorderBrush="{StaticResource TAreaBorderDefault}"
            BorderThickness="1"
            CornerRadius="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <ScrollViewer
                    Grid.Column="0"
                    Background="Transparent"
                    HorizontalScrollBarVisibility="Disabled"
                    VerticalScrollBarVisibility="Auto">
                    <WrapPanel x:Name="wrapPanel" Background="{StaticResource TAreaBackgroundDefault}" />
                </ScrollViewer>
                <StackPanel
                    Grid.Column="1"
                    Width="310"
                    Background="{StaticResource TCardBackgroundDefault}">
                    <lottieicon:TLottieIcon
                        Width="61"
                        Height="61"
                        Margin="12"
                        HorizontalAlignment="Left"
                        IconStyle="{Binding SelectedItem.IStyle}"
                        IconType="{Binding SelectedItem.IType}" />
                    <TextBlock
                        Margin="18,36,18,0"
                        HorizontalAlignment="Left"
                        FontSize="11"
                        Foreground="Gray"
                        Text="Icon Type" />
                    <TextBlock
                        Margin="18,6,18,0"
                        HorizontalAlignment="Left"
                        FontSize="13"
                        Text="{Binding SelectedItem.IType}" />
                    <TextBlock
                        Margin="18,36,18,0"
                        HorizontalAlignment="Left"
                        FontSize="11"
                        Foreground="Gray"
                        Text="Icon Style" />
                    <TextBlock
                        Margin="18,6,18,0"
                        HorizontalAlignment="Left"
                        FontSize="13"
                        Text="{Binding PStyle}" />
                    <TextBlock
                        Margin="18,36,18,0"
                        HorizontalAlignment="Left"
                        FontSize="11"
                        Foreground="Gray"
                        Text="Animation Mode" />
                    <TextBlock
                        Margin="18,6,18,0"
                        HorizontalAlignment="Left"
                        FontSize="13"
                        Text="{Binding SelectedItem.IAnimationMode}" />
                    <TextBlock
                        Margin="18,36,18,0"
                        HorizontalAlignment="Left"
                        FontSize="11"
                        Foreground="Gray"
                        Text="XAML" />
                    <TextBlock
                        Margin="18,6,18,0"
                        HorizontalAlignment="Left"
                        FontSize="13"
                        Text="{Binding XamlString}"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Margin="18,36,18,0"
                        HorizontalAlignment="Left"
                        FontSize="11"
                        Foreground="Gray"
                        Text="C#" />
                    <TextBlock
                        Margin="18,6,18,0"
                        HorizontalAlignment="Left"
                        FontSize="13"
                        Text="{Binding CSharpString}"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Grid>
        </Border>
    </StackPanel>
</Page>
