<Page
    x:Class="TWPFX_Gallery.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="clr-namespace:TWPFX.Animations;assembly=TWPFX"
    xmlns:codeblock="clr-namespace:TWPFX.Controls.TextBlock.CodeBlock;assembly=TWPFX"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TWPFX_Gallery.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:segoebutton="clr-namespace:TWPFX.Controls.Button.SegoeButton;assembly=TWPFX"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid Height="140" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Column="0"
            HorizontalAlignment="Center"
            FontFamily="SimHei"
            FontSize="13"
            Text="常见原因及解决方案Te0o"
            TextOptions.TextFormattingMode="Display"
            TextOptions.TextHintingMode="Fixed"
            TextOptions.TextRenderingMode="ClearType"
            UseLayoutRounding="True" />
        <StackPanel Grid.Column="1" Orientation="Horizontal">
            <codeblock:TCodeBlock
                Width="320"
                Height="460"
                Margin="12,0,0,0"
                Code="import re21212"
                CodeStyle="Stackoverflow_Dark" />
            <segoebutton:TSegoeButton
                x:Name="button"
                Width="31"
                Height="31"
                Clicked="button_Clicked"
                Cursor="Hand"
                Glyph="Copy"
                GlyphSize="16" />
        </StackPanel>
        <TextBlock
            Grid.Column="2"
            Margin="12,0,0,0"
            VerticalAlignment="Center"
            Text="{Binding ViewModel.Counter, Mode=OneWay}" />
    </Grid>
</Page>
