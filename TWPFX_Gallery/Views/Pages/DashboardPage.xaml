<Page
    x:Class="TWPFX_Gallery.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="clr-namespace:TWPFX.Animations;assembly=TWPFX"
    xmlns:codeblock="clr-namespace:TWPFX.Controls.TextBlock.CodeBlock;assembly=TWPFX"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TWPFX_Gallery.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:segoebutton="clr-namespace:TWPFX.Controls.Button.SegoeButton;assembly=TWPFX"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" xmlns:lottiebutton="clr-namespace:TWPFX.Controls.Button.LottieButton;assembly=TWPFX" xmlns:tbutton="clr-namespace:TWPFX.Controls.Button.TButton;assembly=TWPFX"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <StackPanel>
        <TextBlock Text="系统色" FontFamily="Microsoft YaHei"/>
        <Button Click="Button_Click" Content="英文" />
        <Button Click="Button_Click" Content="日文" />
        <Button Click="Button_Click" Content="简体中文" />
        <Button Click="Button_Click" Content="繁体中文" />
        <Button Click="Button_Click" Content="韩语" />
        <Button Click="Button_Click" Content="弹窗" />
        <tbutton:TIconButton Icon="Delete" Text="删除" BorderPadding="8,0,0,0"/>
    </StackPanel>
</Page>
