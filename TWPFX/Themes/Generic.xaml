<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  按钮控件专用色  -->
    <SolidColorBrush x:Key="TButtonBackgroundDefault" Color="#ffffff" />
    <SolidColorBrush x:Key="TButtonBackgroundHover" Color="#f6f6f6" />
    <SolidColorBrush x:Key="TButtonBackgroundPressed" Color="#f6f6f6" />
    <SolidColorBrush x:Key="TButtonBorderDefault" Color="#f0f0f0" />
    <SolidColorBrush x:Key="TButtonBorderHover" Color="#e1e1e1" />

    <!--  卡片控件专用色  -->
    <SolidColorBrush x:Key="TCardBackgroundDefault" Color="#fbfbfb" />
    <SolidColorBrush x:Key="TCardBackgroundHover" Color="#f2f2f2" />
    <SolidColorBrush x:Key="TCardBackgroundPressed" Color="#f5f5f5" />
    <SolidColorBrush x:Key="TCardBorderDefault" Color="#e5e5e5" />
    <SolidColorBrush x:Key="TCardBorderHover" Color="#e1e1e1" />

    <!--  区域专用色  -->
    <SolidColorBrush x:Key="TAreaBackgroundDefault" Color="#f3f3f3" />
    <SolidColorBrush x:Key="TAreaBorderDefault" Color="#eaeaea" />

    <!--  系统状态色  -->
    <SolidColorBrush x:Key="TSuccess" Color="#6CCB5F" />
    <SolidColorBrush x:Key="TWarning" Color="#FCE100" />
    <SolidColorBrush x:Key="TError" Color="#FF99A4" />
    <SolidColorBrush x:Key="TNeutral" Color="#9D9D9D" />

    <!--  状态背景色  -->
    <SolidColorBrush x:Key="TSuccessBackground" Color="#393D1B" />
    <SolidColorBrush x:Key="TWarningBackground" Color="#433519" />
    <SolidColorBrush x:Key="TErrorBackground" Color="#442726" />
    <SolidColorBrush x:Key="TNeutralBackground" Color="#2E2E2E" />
</ResourceDictionary>