<UserControl
    x:Class="TWPFX.Controls.TextBlock.CodeBlock.TCodeBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TWPFX.Controls.TextBlock.CodeBlock"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:segoebutton="clr-namespace:TWPFX.Controls.Button.SegoeButton"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border
        Padding="{Binding Padding, RelativeSource={RelativeSource AncestorType=UserControl}}"
        Background="{StaticResource TCardBackgroundDefault}"
        BorderBrush="{StaticResource TCardBorderDefault}"
        BorderThickness="{Binding BorderThickness, RelativeSource={RelativeSource AncestorType=UserControl}}"
        CornerRadius="6">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Margin="3"
                FontWeight="Bold"
                Text="{Binding Lang, RelativeSource={RelativeSource AncestorType=UserControl}}" />
            <ScrollViewer
                x:Name="scrollViewer"
                Grid.Row="1"
                MaxHeight="{Binding MaxCodeHeight, RelativeSource={RelativeSource AncestorType=UserControl}}"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto">
                <TextBlock
                    x:Name="codeTextBlock"
                    Margin="3,3,0,0"
                    FontFamily="{StaticResource JetBrainsMono}"
                    FontSize="13"
                    TextWrapping="NoWrap" />
            </ScrollViewer>
            <segoebutton:TSegoeButton
                Width="26"
                Height="26"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Clicked="CopyButton_Click"
                Glyph="Copy"
                GlyphSize="14" />
        </Grid>
    </Border>
</UserControl>
